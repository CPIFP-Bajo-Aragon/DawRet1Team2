RewriteRule ^listaPantallas$ listaPantallas.php [L,NC]
RewriteRule ^reloj$ reloj.php [L,NC]
RewriteRule ^error$ error.php [L,NC]
RewriteRule ^departamentos$ departamentos.php [L,NC]
RewriteRule ^formulario$ formulario.php [L,NC]
RewriteRule ^perfil$ perfil.php [L,NC]
RewriteRule ^cerrarsesion$ cerrarsesion.php [L,NC]
RewriteRule ^gestionarPubli$ gestionarPubli.php [L,NC]
RewriteRule ^historico$ historico.php [L,NC]
RewriteRule ^buscadorDepartamento$ buscadorDepartamento.php [L,NC]
RewriteRule ^funcionAddDepartamento$ funcionAddDepartamento.php [L,NC]
RewriteRule ^funcionAddPantalla$ funcionAddPantalla.php [L,NC]
RewriteRule ^depDesplegados$ depDesplegados.php [L,NC]
RewriteRule ^buscadorHistorial$ buscadorHistorial.php [L,NC]
RewriteRule ^buscadorPantalla$ buscadorPantalla.php [L,NC]
RewriteRule ^buscadorUsuario$ buscadorUsuario.php [L,NC]
RewriteRule ^añadirUsuario$ añadirUsuario.php [L,NC]
RewriteRule ^pantallaEditar$ pantallaEditar.php [L,NC]
