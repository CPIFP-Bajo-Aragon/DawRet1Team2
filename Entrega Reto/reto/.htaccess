# ----------------------------------------------------------------------
# Habilitar modulo mod_rewrite
# ----------------------------------------------------------------------

<IfModule mod_rewrite.c>
  Options +FollowSymlinks
  RewriteEngine On
</IfModule>

RewriteBase /
DirectoryIndex index.php

# ----------------------------------------------------------------------
# Paginas amigables
# ----------------------------------------------------------------------
RewriteRule ^index$ index.php [L,NC]
